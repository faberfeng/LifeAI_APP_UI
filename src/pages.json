	"tabBar": {
		"color": "#000000",
		"selectedColor": "#000000",
		"borderStyle": "white",
		"backgroundColor": "#ffffff",
		"list": [
			{
				//首页
				"pagePath": "pages/index/index"
			}, 
			{
				//Ai对话
				"pagePath": "pages/chat/index"
